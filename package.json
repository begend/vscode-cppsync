{
    "name": "synccpp",
    "displayName": "syncCpp",
    "description": "sync cpp file",
    "version": "0.0.1",
    "publisher": "jch",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:cpp",
        "onLanguage:c"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "sycn path conf",
            "properties": {
                "synccpp.srcRootPath": { 
                    "type": "string",
                    "default": "d:\\work\\node\\synccode-master",
                    "description": "the src root path"
                },
                "synccpp.destRootPath": {
                    "type": "string",
                    "default": "d:\\work\\node\\bak",
                    "description": "the dest root path"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}